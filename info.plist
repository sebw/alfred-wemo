IP=`echo {query} | awk -F':' '{print $1}'`
NAME=`echo {query} | awk -F':' '{print $2}'`
STATUS=`echo {query} | awk -F':' '{print $3}'`

echo -n "$NAME "

# We change the status
if [ "$STATUS" == "ON" ]; then
	./wemo.sh ${IP} OFF &gt; /dev/null
	echo "is OFF"
elif [ "$STATUS" == "OFF" ]; then
	./wemo.sh ${IP} ON &gt; /dev/null
	echo "is ON"
